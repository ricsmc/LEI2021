{
  "kind": "collectionType",
  "collectionName": "collections",
  "info": {
    "name": "Collection",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "public": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "utilizador": {
      "model": "utilizador",
      "via": "collections"
    },
    "memories": {
      "collection": "memory",
      "via": "collections"
    },
    "collection_picture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    }
  }
}
